    "morgan": "^1.10.0",
    "nock": "^13.2.8",
    "pg": "^8.11.2",
    "pino": "<7.0.0",
    "pino-pretty": "^10.2.0",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "uuid": "^9.0.0"
